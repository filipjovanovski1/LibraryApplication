@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Welcome</h1>
        <p class="lead text-muted">
            Use the navigation cards below to manage <strong>Books</strong>, <strong>Copies</strong>,
            <strong>Borrowings</strong>, <strong>Classrooms</strong> and <strong>Seats</strong>.
        </p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        <div class="col">
            <div class="card h-100 shadow-sm text-center">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title mb-3">Books</h5>
                    <p class="card-text text-muted small flex-grow-1">
                        Browse, add, and manage all books in the library.
                    </p>
                    <a asp-controller="Books" asp-action="Index" class="btn btn-primary mt-auto">Go to Books</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm text-center">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title mb-3">Classrooms</h5>
                    <p class="card-text text-muted small flex-grow-1">
                        Manage classrooms, seat arrangements, and availability.
                    </p>
                    <a asp-controller="Classroom" asp-action="Index" class="btn btn-primary mt-auto">Go to Classrooms</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm text-center">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title mb-3">Users</h5>
                    <p class="card-text text-muted small flex-grow-1">
                        View and manage system users and their borrowings.
                    </p>
                    <a asp-controller="Users" asp-action="Index" class="btn btn-primary mt-auto">Go to Users</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm text-center">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title mb-3">Authors</h5>
                    <p class="card-text text-muted small flex-grow-1">
                        Manage author information and their published works.
                    </p>
                    <a asp-controller="Authors" asp-action="Index" class="btn btn-primary mt-auto">Go to Authors</a>
                </div>
            </div>
        </div>
    </div>
</div>
