@model IEnumerable<CoursesApplication.Domain.DomainModels.Author>
@{
    ViewData["Title"] = "Authors";
}

<div class="container py-4">
    @Html.AntiForgeryToken()
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Authors</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Authors</h2>
        @if (User.IsInRole("Librarian"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Author
            </a>
        }
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle" id="authorsTable">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.First().Name)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Surname)</th>
                        <th class="text-end" style="width: 220px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var author in Model)
                    {
                        <tr>
                            <td>@author.Name</td>
                            <td>@author.Surname</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@author.Id"
                                   class="btn btn-sm btn-outline-primary">Details</a>
                                @if (User.IsInRole("Librarian") || User.IsInRole("Keeper"))
                                {
                                    <a asp-action="Edit" asp-route-id="@author.Id"
                                       class="btn btn-sm btn-outline-warning me-1">Edit</a>
                                }

                                @if(User.IsInRole("Librarian"))
                                {
                                    <button type="button"
                                            class="btn btn-sm btn-outline-danger js-delete-author"
                                            data-author-id="@author.Id"
                                            data-author-name="@($"{author.Name} {author.Surname}".Trim())">
                                        Delete
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No authors found.  
            @if(User.IsInRole("Librarian"))
            {
                <a asp-action="Create" class="alert-link">Add one now</a><text>.</text>
            }
        </div>
    }
</div>
@section Scripts {
    <script src="~/js/authors-index.js" asp-append-version="true"></script>
}