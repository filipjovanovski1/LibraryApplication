@model CoursesApplication.Domain.DomainModels.Author
@{
    ViewData["Title"] = "Author Details";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Authors" asp-action="Index">Authors</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Author Details</h5>
                </div>

                <div class="card-body">
                    <dl class="row mb-4">
                        <dt class="col-sm-3">First Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Last Name</dt>
                        <dd class="col-sm-9">@Model.Surname</dd>
                    </dl>

                    <div class="d-flex gap-2 mb-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
                    </div>

                    <hr />
                    <h5 class="mb-3">Books by this author (@(Model.Books?.Count ?? 0))</h5>

                    @if (Model.Books != null && Model.Books.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Title</th>
                                        <th>Category</th>
                                        <th style="width: 120px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var b in Model.Books)
                                    {
                                        <tr>
                                            <td>@b.Title</td>
                                            <td>@b.Category</td>
                                            <td>
                                                <a asp-controller="Books" asp-action="Details" asp-route-id="@b.Id"
                                                   class="btn btn-sm btn-outline-primary">Open</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted fst-italic">No books by this author.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
