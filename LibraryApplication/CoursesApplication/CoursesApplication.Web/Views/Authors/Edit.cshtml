@model CoursesApplication.Domain.DomainModels.Author
@{
    ViewData["Title"] = "Edit Author";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Authors" asp-action="Index">Authors</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Edit Author</h5>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="alert alert-danger d-none" role="alert" data-valmsg-summary="true">
                            <ul></ul>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">First Name <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Gabriel" autofocus />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Surname" class="form-label">Last Name <span class="text-danger">*</span></label>
                            <input asp-for="Surname" class="form-control" placeholder="e.g., García Márquez" />
                            <span asp-validation-for="Surname" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-muted small">
                    Fields marked with <span class="text-danger">*</span> are required.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
