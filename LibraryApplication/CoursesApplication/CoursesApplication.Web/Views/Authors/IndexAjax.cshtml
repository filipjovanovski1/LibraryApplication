@model IEnumerable<CoursesApplication.Domain.DomainModels.Author>

@{
    ViewData["Title"] = "Authors Catalog";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Authors Catalog</h2>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No authors found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle shadow-sm" id="authorsAjaxTable">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Surname</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var author in Model)
                    {
                        <tr>
                            <td>@author.Name</td>
                            <td>@author.Surname</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(function () {
            $("#authorsAjaxTable").DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50]
            });
        });
    </script>
}