                    @model CoursesApplication.Domain.Identity.User
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Create User";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Create User</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Surname" class="form-label"></label>
                            <input asp-for="Surname" class="form-control" />
                            <span asp-validation-for="Surname" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Role</label>
                            <select name="selectedRole" class="form-select">
                                <option value="">-- Select role --</option>
                                @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Roles)
                                {
                                    if (item.Selected)
                                    {
                                        <option value="@item.Value" selected="selected">@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
