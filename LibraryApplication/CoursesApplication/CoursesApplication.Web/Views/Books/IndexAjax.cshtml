@model IEnumerable<CoursesApplication.Domain.DomainModels.Book>
@using System.Linq

@{
    ViewData["Title"] = "Books Catalog";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Books Catalog</h2>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No books found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle shadow-sm" id="booksAjaxTable">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Authors</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Title</td>
                            <td>@(book.Category?.ToString().Replace('_', ' ') ?? "N/A")</td>
                            <td>@string.Join(", ", book.Authors.Select(a => $"{a.Name} {a.Surname}"))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(function () {
            $("#booksAjaxTable").DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50]
            });
        });
    </script>
}