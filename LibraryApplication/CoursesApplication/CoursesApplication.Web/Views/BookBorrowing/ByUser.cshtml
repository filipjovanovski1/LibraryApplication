@model IEnumerable<CoursesApplication.Domain.DomainModels.BookBorrowing>
@{
    ViewData["Title"] = "Borrowings by User";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="BookBorrowings" asp-action="Index">Borrowings</a></li>
            <li class="breadcrumb-item active" aria-current="page">By User</li>
        </ol>
    </nav>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Borrowings by User</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Book Copy</th>
                                <th>Borrowed At</th>
                                <th>Due Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var b in Model)
                            {
                                <tr>
                                    <td><code>@b.BookCopyId</code></td>
                                    <td>@b.BorrowedAt:yyyy-MM-dd</td>
                                    <td>@b.DueDate:yyyy-MM-dd</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info mb-0">No borrowings found for this user.</div>
            }
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-outline-secondary">Back to list</a>
        </div>
    </div>
</div>
