@model CoursesApplication.Domain.DomainModels.BookBorrowing
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Create Borrowing";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="BookBorrowings" asp-action="Index">Borrowings</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Create Borrowing</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="alert alert-danger d-none" role="alert" data-valmsg-summary="true">
                            <ul></ul>
                        </div>

                        <!-- BookCopyId must be posted back -->
                        <input asp-for="BookCopyId" type="hidden" />

                        <div class="mb-3">
                            <label class="form-label">Book Copy</label>
                            <div>
                                <code>@Model.BookCopyId</code>
                                @if (ViewBag.InventoryCode != null)
                                {
                                    <span class="text-muted ms-2">(@ViewBag.InventoryCode)</span>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label">User <span class="text-danger">*</span></label>
                            <select asp-for="UserId" class="form-select"
                                    asp-items="(IEnumerable<SelectListItem>)ViewBag.Users">
                                <option value="@Guid.Empty">-- Select user --</option>
                            </select>
                            <span asp-validation-for="UserId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BorrowedAt" class="form-label">Borrowed At <span class="text-danger">*</span></label>
                            <input asp-for="BorrowedAt" type="date" class="form-control" />
                            <span asp-validation-for="BorrowedAt" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DueDate" class="form-label">Due Date <span class="text-danger">*</span></label>
                            <input asp-for="DueDate" type="date" class="form-control" />
                            <span asp-validation-for="DueDate" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Book</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted small">
                    Fields marked with <span class="text-danger">*</span> are required.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

