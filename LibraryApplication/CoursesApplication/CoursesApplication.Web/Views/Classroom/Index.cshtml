@model IEnumerable<CoursesApplication.Domain.DomainModels.Classroom>
@{

    ViewData["Title"] = "Classrooms";

}
<div class="container py-4">
    <div class="mb-4">
        <h1 class="mb-1">Classrooms</h1>
        <p class="text-muted mb-0">
            On this page, you can view all the classrooms. By selecting a specific classroom, you will see the seating layout and their occupancy, as well as have the option to assign a person to a particular seat or cancel an occupied seat.
        </p>
    </div>
    @if (User.IsInRole("Keeper"))
    {

        <div class="d-flex justify-content-between align-items-center mb-3">
            <a asp-action="Create" class="btn btn-primary">Add new classroom</a>
        @* (Optional) Place for future filters/search *@
    </div>
    }
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No classrooms found.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text mb-1"><strong>Location:</strong> @item.Location</p>
                            <p class="card-text"><strong>Capacity:</strong> @item.Capacity</p>
                        </div>
                        <div class="card-footer">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                Check classroom availability
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
