@model IEnumerable<CoursesApplication.Domain.DomainModels.Classroom>
@{

    ViewData["Title"] = "Classrooms";

}
<div class="container py-4">
    <div class="mb-4">
        <h1 class="mb-1">Classrooms</h1>
        <p class="text-muted mb-0">
            On this page, you can view all the classrooms. By selecting a specific classroom, you will see the seating layout and their occupancy, as well as have the option to assign a person to a particular seat or cancel an occupied seat.
        </p>
    </div>
    @if (User.IsInRole("Keeper"))
    {

        <div class="d-flex justify-content-between align-items-center mb-3">
            <a asp-action="Create" class="btn btn-primary">Add new classroom</a>
     
    </div>
    }
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No classrooms found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle shadow-sm" id="classroomsTable">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Capacity</th>
                        <th style="width:260px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Location</td>
                            <td>@item.Capacity</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    Check classroom availability
                                </a>
                                @if (User.IsInRole("Keeper"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning ms-1">Edit</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/classrooms-index.js" asp-append-version="true"></script>
}