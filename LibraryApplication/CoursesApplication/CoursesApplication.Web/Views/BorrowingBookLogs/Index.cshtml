@model IEnumerable<CoursesApplication.Domain.DomainModels.BorrowingBookLog>
@{
    ViewData["Title"] = "Borrowing Logs";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Borrowing Logs</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Borrowing Logs</h2>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Book Copy</th>
                        <th>User</th>
                        <th>Borrowed At</th>
                        <th>Returned At</th>
                        <th>Notes</th>
                        <th class="text-end" style="width: 220px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td><code>@x.BookCopyId</code></td>
                            <td>@x.UserId</td>
                            <td>@x.BorrowedAt:yyyy-MM-dd HH:mm</td>
                            <td>@(x.ReturnedAt.ToString("yyyy-MM-dd HH:mm") ?? "—")</td>
                            <td>@(string.IsNullOrWhiteSpace(x.Notes) ? "—" : x.Notes)</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@x.Id" class="btn btn-sm btn-outline-info me-1">Details</a>
                                <a asp-action="Edit" asp-route-id="@x.Id" class="btn btn-sm btn-outline-warning me-1">Edit</a>
                                <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No borrowing logs found.</div>
    }
</div>
