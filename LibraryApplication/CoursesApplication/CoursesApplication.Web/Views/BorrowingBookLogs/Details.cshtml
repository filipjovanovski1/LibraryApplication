@model CoursesApplication.Domain.DomainModels.BorrowingBookLog
@{
    ViewData["Title"] = "Borrowing Log Details";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="BorrowingBookLogs" asp-action="Index">Borrowing Logs</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Borrowing Log Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Id</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Book Copy</dt>
                        <dd class="col-sm-9"><code>@Model.BookCopyId</code></dd>

                        <dt class="col-sm-3">User</dt>
                        <dd class="col-sm-9">@Model.UserId</dd>

                        <dt class="col-sm-3">Borrowed At</dt>
                        <dd class="col-sm-9">@Model.BorrowedAt:yyyy-MM-dd HH:mm</dd>
