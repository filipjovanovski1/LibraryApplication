@model CoursesApplication.Domain.DomainModels.BorrowingBookLog
@{
    ViewData["Title"] = "Return Book & Create Log";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="BorrowingBookLogs" asp-action="Index">Borrowing Logs</a></li>
            <li class="breadcrumb-item active" aria-current="page">Return & Log</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Return Book & Create Log</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <input asp-for="BookCopyId" type="hidden" />
                        <input asp-for="UserId" type="hidden" />
                        <input asp-for="BorrowedAt" type="hidden" />
                        <input asp-for="DueDate" type="hidden" />

                        <div class="alert alert-danger d-none" role="alert" data-valmsg-summary="true"><ul></ul></div>

                        <div class="mb-2 text-muted">
                            <strong>Copy:</strong> @ViewBag.InventoryCode
                        </div>

                        <div class="mb-3">
                            <label class="form-label">User</label>
                            <input class="form-control" value="@ViewBag.UserFullName" readonly />
                        </div>

                        <div class="row g-3">
                            <div class="col-sm-6">
                                <label class="form-label">Borrowed At</label>
                                <input class="form-control" value="@Model.BorrowedAt.ToString("yyyy-MM-dd")" readonly />
                            </div>
                            <div class="col-sm-6">
                                <label class="form-label">Due Date</label>
                                <input class="form-control" value="@(Model.DueDate?.ToString("yyyy-MM-dd") ?? "—")" readonly />
                            </div>
                        </div>

                        <div class="row g-3 mt-0 mb-3">
                            <div class="col-sm-6">
                                <label asp-for="ReturnedAt" class="form-label">Returned At <span class="text-danger">*</span></label>
                                <input asp-for="ReturnedAt" class="form-control" type="date" />
                                <span asp-validation-for="ReturnedAt" class="text-danger small"></span>
                            </div>
                            <div class="col-sm-6">
                                <label asp-for="Notes" class="form-label">Notes</label>
                                <input asp-for="Notes" class="form-control" />
                                <span asp-validation-for="Notes" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Submit Log & Delete Booking</button>
                            <a asp-controller="Books" asp-action="Details" asp-route-id="@ViewBag.BookId" class="btn btn-outline-secondary">Back</a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted small">
                    Fields marked with <span class="text-danger">*</span> are required.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
